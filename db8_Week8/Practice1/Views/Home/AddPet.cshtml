@model Practice1.Models.Animal
@{
    ViewData["Title"] = "AddPet";
}

<h1>AddPet</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PetAdded">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Species"></label>
                <input asp-for="Species" class="form-control" id="floatingInput" placeholder="Species" control-id="ControlID-41"/>
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Name" control-id="ControlID-41"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" id="floatingInput" placeholder="Color" control-id="ControlID-41"/>
                <span asp-valiation-for="Color" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" placeholder="Gender"/>
                <span asp-valiation-for="Gender" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Weight" class="form-label"></label>
                <input asp-for="Weight" class="form-control" placeholder="Weight"/>
                <span asp-valiation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Born" class="form-label"></label>
                <input asp-for="Born" class="form-control" placeholder="Born"/>
                <span asp-valiation-for="Born" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value ="Add Pet" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
