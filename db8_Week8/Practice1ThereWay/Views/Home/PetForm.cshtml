
@{
    ViewData["Title"] = "PetForm";
}

<h1>PetForm</h1>

<form method="post" action="/home/petadded">
          <select name="Species">
            <option>Cow</option>
            <option>Dog</option>
            <option>Cat</option>
            <option>Fish</option>
            <option>Horse</option>
            <option>Rabbit</option>
            <option>Hen</option>
            <option>Elephant</option>
            <option>Sheep</option>
        </select><br />
    Name: <input type="text" name="name" /><br />
    Color: <input type="color" name="color" /><br />
          <select name="Gender">
              <option>Male</option>
              <option>Female</option>
          </select><br />
    Weight: <input type="number" name="weight" /><br />
          <select name="Born">
            <option>2015</option>
            <option>2016</option>
            <option>2017</option>
            <option>2018</option>
            <option>2019</option>
            <option>2020</option>
            <option>2021</option>
            <option>2022</option>
         </select>
   
    
    <br />
    <input type="submit" value="Register" />
</form>