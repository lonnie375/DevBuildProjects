
@{
    ViewData["Title"] = "Index";
}

<h1>List of Employees</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
 
        </tr>
    </thead>
    <tbody>
        @foreach(Employee emply in Model)
        {
            <tr>
                <td>@emply.firstName</td>
                <td>@emply.lastName</td>
                <td>
                    <a href="/employee/detail/@emply.id">Details</a>
                    <a href="/employee/editform/@emply.id">Edit</a>
                    <a href="/employee/delete/@emply.id">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table><br />

<a href="/employee/addform">Add Employee</a>