@model Comic
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Xkcd Comic!</h1>

    
    @if(Model != null)
    {
        <div>
              <h2>@Model.title</h2>

            Comic Number: @Model.num<br />

            Publicshed on @Model.year - @Model.month - @Model.day<br />

            <img src="@Model.img"/>

            <br /><br />

        

            <div style="font-size:2em">
                @if (Model.num > 1)
                {
                    <a href="/home/index?comicnum=@(Model.num-1)">&lt Previous</a>

                }
              
                     <a href="/home/index?comicnum=@(Model.num+1)">&gt Next</a>
                

            </div>
        </div>
    }
    else
    {
        <div>Sorry, that comic wasn't found</div>
    }

    



    <form method="post" action="/home/index">
        <h5>What number comic would you like to see? <input type="text" name="comicnum" placeholder="comic#" class="form-control-sm" style="width:10%;"/>  <input type="submit" value="submit" /></h5>
    </form>
</div>
